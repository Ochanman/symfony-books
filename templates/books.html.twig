{% extends "base.html.twig" %}
{% block metatitle %}
    Vos livres
{% endblock metatitle %}

 {# j'insere le block metatitle mais fait appel a la metatitle par defaut en utilisant la fonction parent + le metatitle "Articles"   #}


{# j'insere le block main qui permet de mettre du contenu dans le main de ma page articles   #}
{% block main %}
    <section class="boxBook">

        {% for book in books %}

                <div id="contentBook">
                    <h1 id="bookTitle">{{ book.title }}</h1>
                    <p id="bookAuthor">Ecrit par {{ book.author }}</p>
                    <p id="bookPublish">Publi√© le {{ book.publishedAt | date('d/m/y')}}</p>
                    <a class="lien" href="{{ path('book', {'id': book.id}) }}"><img id="bookImg" src="{{ book.image }}" alt="{{ book.title }}"></a>

                </div>

        {% endfor %}
    </section>
{% endblock main %}